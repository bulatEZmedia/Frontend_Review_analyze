<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeficitActivity"
    android:background="@drawable/background">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/then5"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="341dp"
        android:layout_height="50dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="#090909"
        android:text="Назад"
        android:textAllCaps="false"
        android:textColor="#DAEA25"
        android:textSize="16sp"
        app:cornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/myRectangleView3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="644dp"
        android:background="@drawable/rectangle4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="33dp"
        android:layout_height="15dp"
        android:layout_marginTop="15dp"
        android:text="Babich"
        android:textColor="#DEFA2C"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Недостатки продукта"
        android:textColor="#DAEA25"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/then5"
        app:layout_constraintStart_toStartOf="@+id/then5"
        app:layout_constraintTop_toTopOf="@+id/then5"
        app:layout_constraintVertical_bias="0.461"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="389dp"
        android:layout_height="270dp"
        android:layout_marginTop="44dp"
        android:text="1. Ограниченность в филиальной сети: Одним из недостатков Тинькофф является отсутствие развитой филиальной сети, что может создавать неудобства для клиентов, предпочитающих общение в офисах банка.  2. Проблемы с качеством обслуживания: Иногда клиенты отмечают недостаточное качество обслуживания или задержки в решении финансовых вопросов."
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myRectangleView3" />
</androidx.constraintlayout.widget.ConstraintLayout>